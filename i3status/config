general {
  output_format = "i3bar"
  colors = true
  color_good = "#F7CA88"
  color_degraded = "#A1B56C"
  color_bad = "#FF5555"
  interval = 60
}

order += "tztime local"

tztime local {
  format = "%Y-%m-%d %H:%M"
}
