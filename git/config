[core]
  editor = nvim
  pager = diff-so-fancy | less --tabs=2 -RFX
[include]
  path = ~/.config/git/config.local
[push]
  default = simple
  autoSetupRemote = true
[rebase]
  autosquash = true
[alias]
  lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%H%C(reset) - %C(bold green)(%ad)%C(reset) %s %C(dim white)- %C(bold white)%G?%C(reset) %C(dim white)%an%C(reset)%C(bold yellow)%d%C(reset)'
[log]
  date = iso
[init]
  defaultBranch = main
[commit]
  gpgSign = true
